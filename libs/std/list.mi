fn (List) each(cb: fn(v: V)): void =
  `calls f for each elem in the list
  current := l.head
  while current != nil
    cb(current.value)
    current = current.next

fn (List) map[B](cb: fn(v: V): B): list[A] =
  `returns a list made up of B elements for each elem in the list
  nl := []
  current := l.head
  while current != nil
    item := cb(current.value)
    nl.push(item)
  nl

