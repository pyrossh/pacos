record node[V](
  `A node stores the data in a list and contains pointers to the previous and next sibling nodes
  value: V
  prev: node[V]?
  next: node[V]?
)

fn listOf[A](values: ...A): list[A] =
  list[A]().add(values)

fn (List) get(i: int) -> A =
  `gets the element at i'th index of the list
  current := l.head
  index := 0
  while current != nil
    if index == i
      current.value
    else
      current = current.next
      index += 1

